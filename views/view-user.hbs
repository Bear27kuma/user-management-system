<div class="breadcrumbs mb-5">
    <ul>
        <li>
            <a href="/"><i class="fa-solid fa-house-chimney"></i>Home</a>
        </li>
        <li>
            <i class="fa-solid fa-user"></i>View User
        </li>
    </ul>
</div>

{{#each rows}}
    <div class="bg-neutral w-full shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-neutral-content">
                {{this.first_name}} {{this.last_name}}
            </h3>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        First Name
                    </dt>
                    <dd class="mt-1 text-sm text-bg-content sm:mt-0 sm:col-span-2">
                        {{this.first_name}}
                    </dd>
                </div>
                <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Last Name
                    </dt>
                    <dd class="mt-1 text-sm text-bg-content sm:mt-0 sm:col-span-2">
                        {{this.last_name}}
                    </dd>
                </div>
                <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Email
                    </dt>
                    <dd class="mt-1 text-sm text-bg-content sm:mt-0 sm:col-span-2">
                        {{this.email}}
                    </dd>
                </div>
                <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Phone
                    </dt>
                    <dd class="mt-1 text-sm text-bg-content sm:mt-0 sm:col-span-2">
                        {{this.phone}}
                    </dd>
                </div>
                <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Comment
                    </dt>
                    <dd class="mt-1 text-sm text-bg-content sm:mt-0 sm:col-span-2">
                        {{this.comment}}
                    </dd>
                </div>
            </dl>
        </div>
    </div>
{{/each}}
