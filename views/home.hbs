{{#if removedUser}}
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span>User has been removed successfully.</span>
        </div>
        <div class="flex-none">
            <a href="/" class="btn btn-sm btn-ghost">close</a>
        </div>
    </div>
{{/if}}

<div class="flex items-center justify-between mb-5">
    <h1 class="text-2xl font-semibold">Users</h1>
    <div>
        <a href="/adduser" class="btn btn-primary">+ Add User</a>
    </div>
</div>

<div class="overflow-mx-auto">
    <table class="table table-zebra w-full">
        <thead class="table-dark">
        <tr>
            <th scope="col" class="text-base">#</th>
            <th scope="col" class="text-base">First Name</th>
            <th scope="col" class="text-base">Last Name</th>
            <th scope="col" class="text-base">Email</th>
            <th scope="col" class="text-base">Phone</th>
            <th scope="col" class="text-base text-right">Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each rows}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td class="text-right">
                    <a href="/viewuser/{{this.id}}" class="btn btn-outline btn-info btn-sm"><i class="bi bi-eye"></i> View</a>
                    <a href="/edituser/{{this.id}}" class="btn btn-outline btn-warning btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                    <a href="/{{this.id}}" class="btn btn-outline btn-error btn-sm"><i class="bi bi-person-x"></i> Delete</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
