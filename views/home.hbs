{{#if removedUser}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        User has been removed successfully.
        <a href="/" class="btn-close"></a>
    </div>
{{/if}}

<div class="flex items-center justify-between mb-5">
    <h1 class="text-2xl font-semibold">Users</h1>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" class="btn btn-primary">+ Add User</a>
    </div>
</div>

<div class="overflow-mx-auto">
    <table class="table table-zebra w-full">
        <thead class="table-dark">
        <tr>
            <th scope="col" class="text-base">#</th>
            <th scope="col" class="text-base">First Name</th>
            <th scope="col" class="text-base">Last Name</th>
            <th scope="col" class="text-base">Email</th>
            <th scope="col" class="text-base">Phone</th>
            <th scope="col" class="text-base text-right">Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each rows}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td class="text-right">
                    <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                    <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                    <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
